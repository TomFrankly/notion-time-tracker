{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/popup/lib/*"],
      "$components/*": ["src/popup/components/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"]
}
